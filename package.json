{
  "name": "auto_d_price",
  "version": "1.0.0",
  "description": "浏览器自动化项目",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "install-browsers": "playwright install",
    "build": "pkg main.js --targets node18-win-x64 --output auto_d_price.exe"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "playwright": "^1.40.0",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5",
    "mysql2": "^3.6.5"
  },
  "bin": "main.js",
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "storage/**/*",
      "run/**/*",
      "node_modules/playwright-core/.local-browsers/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "mountpoints": [
      ["storage", "./storage"],
      ["run", "./run"]
    ],
    "scripts": {
      "preinstall": "mkdir -p storage run"
    }
  }
}
